{
  "compilerOptions": {
    "declaration": false,
    "allowUnreachableCode": false,
    "importHelpers": true,
    "target": "es2017",
    "disableSizeLimit": true,
    "module": "commonjs",
    "noImplicitAny": false,
    "removeComments": false,
    "preserveConstEnums": false,
    "sourceMap": false,
    "downlevelIteration": true,
    "lib": [ "es2019", "dom" ],
    "typeRoots": [ "./node_modules/zotero-types" ],
  },
  "include": [ "bootstrap.ts" ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
